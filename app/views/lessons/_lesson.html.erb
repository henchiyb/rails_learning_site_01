<div class="post-lesson">
  <div class="user-info-mini">
    <%= gravatar_for lesson.user, size = Settings.image.small_size %>
    <h3 class="user-name"><%= lesson.user.name %></h4>
    <h6><%= lesson.created_at.strftime "%D %H:%M" %></h6>
    <p><%= lesson.content %></p>
  </div>

  <div class="btn-group">
    <div id = "lesson_likes">
      <% if logged_in? && current_user.likes?(lesson) %>
        <%= button_to lesson_like_path(lesson), method: :delete do %>
          <span><i class="material-icons">thumb_up_alt</i>(<%= lesson.likes.count %>)</span>
        <% end %>
      <% else %>
        <%= button_to  lesson_like_path(lesson), method: :post do %>
          <span><i class="material-icons">thumb_up_alt</i>(<%= lesson.likes.count %>)</span>
        <% end %>
      <% end %>
    </div>
    <div>
      <button onclick="getFocus(<%= lesson.id %>)">
        <span><i class="material-icons">comment</i></span>
      </button>
    </div>
    <div>
      <%= button_to "https://www.facebook.com/share" do %>
        <span><i class="material-icons" >share</i></span>
      <% end %>
    </div>
  </div>
  <hr>
  <%= render "comments/comments", object: lesson %>
  <%= render "comments/form", object: lesson %>
</div>
