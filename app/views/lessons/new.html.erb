<%= provide :title, t(".title") %>
<h1><%= t ".title" %></h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @lesson do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :description %>
      <%= f.text_area :description, class: "lesson-description" %>

      <%= f.label :content %>
      <%= f.text_area :content, class: "lesson-content" %>

      <%= f.label :category_id %>
      <%= f.select :category_id, class: "lesson-content" %>

      <%= f.label :category_id %>
      <%= f.select :category_id, options_for_select(@all_category.pluck(:name, :id))%>

      <%= f.submit t(".create_lesson"), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
