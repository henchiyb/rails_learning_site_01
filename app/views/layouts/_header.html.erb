<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to t(".title"), root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to t(".home"), root_path, class: "menu-button" %></li>
        <li><%= link_to t(".help"), help_path, class: "menu-button" %></li>
        <% if logged_in? %>
          <li><%= link_to t(".logout"), logout_path,
            {class: "menu-button", method: :delete} %></li>
        <% else %>
          <li><%= link_to t(".login"), login_path, class: "menu-button" %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
