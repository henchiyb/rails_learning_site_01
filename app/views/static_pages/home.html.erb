<%= provide :title, t(".title") %>
<% if logged_in? %>
  <%= render "users/user", object: current_user %>
  <%= render "lessons/lessons", object: @followed_lessons %>
<% else %>
  <div class="center jumbotron">
    <h1><%= t ".title" %></h1>
    <%= link_to t(".sign_up"), new_user_path, class: "btn btn-lg btn-primary" %>
  </div>
<% end %>
