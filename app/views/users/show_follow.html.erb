<% provide(:title, @title) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <%= gravatar_for @user %>
      <h4><%= @user.name %></h4>
    </section>
    <section class="counts">
      <%= render "shared/count" %>
    </section>
  </aside>
  <div class="col-md-8">
    <h3><%= @title %></h3>
    <% if @users.any? %>
      <ul class="follow">
        <% @users.each do |user| %>
          <%= link_to gravatar_for(user), user %>
          <%= link_to user.name, user_path(user.id) %>
        <% end %>
      </ul>
      <%= paginate @users, theme: "twitter-bootstrap-3"  %>
    <% end %>
  </div>
</div>
